<script>

// IMAGE PREVIEW
function previewImage(event) {
    const file = event.target.files[0];
    const previewDiv = document.getElementById("imagePreview");
    previewDiv.innerHTML = "";

    if (file) {
        const img = document.createElement("img");
        img.src = URL.createObjectURL(file);
        img.style.maxWidth = "100%";
        img.style.marginTop = "10px";
        previewDiv.appendChild(img);
    }
}

// LOAD ZOOM TRANSCRIPT (SIMULATION)
async function loadZoomTranscript() {
    const sampleText = "Project discussion\nBudget approval\nDeadline finalized";
    document.getElementById("zoomTranscript").value = sampleText;
    alert("Zoom transcript loaded!");
}

// GENERATE MOM
function generateMOM() {

    const manualText = document.getElementById("manualTranscript").value;
    const zoomText = document.getElementById("zoomTranscript").value;

    const transcript = manualText || zoomText;

    const lines = transcript.split("\n").filter(line => line.trim() !== "");

    let discussionHTML = "";
    lines.forEach(line => {
        discussionHTML += `<li>${line}</li>`;
    });

    document.getElementById("discussionList").innerHTML = discussionHTML;
    document.getElementById("decisionList").innerHTML = "<li>Approved next phase</li>";
    document.getElementById("actionList").innerHTML = "<li>Team to submit report</li>";
    document.getElementById("openList").innerHTML = "<li>Vendor confirmation pending</li>";

    // Auto increase meeting count
    let totalMeetings = parseInt(document.getElementById("meetingsCount").innerText) || 0;
    totalMeetings++;
    document.getElementById("meetingsCount").innerText = totalMeetings;
}

// AUTO CALCULATE MEETINGS
function calculateMeetings() {
    const offline = parseInt(document.getElementById("offlineMeetingsInput").value) || 0;
    const zoom = parseInt(document.getElementById("zoomMeetingsInput").value) || 0;
    const online = parseInt(document.getElementById("onlineMeetingsInput").value) || 0;

    const total = offline + zoom + online;

    document.getElementById("meetingResult").innerHTML =
        `Total Meetings: ${total}<br>
         Offline Meetings: ${offline}<br>
         Zoom Meetings: ${zoom}<br>
         Other Online Meetings: ${online}`;

    document.getElementById("meetingsCount").innerText = total;
    document.getElementById("offlineCount").innerText = offline;
    document.getElementById("zoomCount").innerText = zoom;
    document.getElementById("onlineCount").innerText = online;
}

// EVENT LISTENERS (AUTO UPDATE)
document.getElementById("offlineMeetingsInput").addEventListener("input", calculateMeetings);
document.getElementById("zoomMeetingsInput").addEventListener("input", calculateMeetings);
document.getElementById("onlineMeetingsInput").addEventListener("input", calculateMeetings);

// PLACEHOLDER FUNCTIONS
function downloadPDF() {
    alert("PDF feature will be connected to backend.");
}
function registerUser() {
    alert("Registration not implemented.");
}

</script>

